%div.row
  %div.large-3.columns.left_body_menu
    %p What can I do on this page?
    %p
      = link_to 'Add some records', new_sport_league_record_path(@sport, @league)
    %p
      = link_to 'Back', sport_leagues_path
  %div.large-9.columns
    %p
      = @league.name
    %div.year_links
      = link_to 'All time standings'
      - @league_years.each do |year|
        |
        = link_to "#{year} Season", sport_league_path(@sport, @league, year: year)
    %table
      %tr
        %td Team
        %td Wins
        %td Losses
        %td Ties
        - @league_records.each do |record|
          %tr
            %td
              = record[:team_name]
            %td
              = record[:wins]
            %td
              = record[:losses]
            %td
              = record[:ties]
