%div.row
  %div.large-3.columns.left_body_menu
    %p What can I do on this page?
    %p
      = link_to 'Add some records', new_sport_league_record_path(@sport, @league)
    %p
      = link_to 'Back', sport_leagues_path
  %div.large-9.columns
    %p
      = @league.name
    %div.year_links
      = link_to 'All time standings'
      |
      = link_to 'Current Season'
    %table
      %tr
        %td Team
        %td Wins
        %td Losses
        %td Ties
        - @league_records.sort.reverse.each do |record|
          %tr
            %td
              = record[3]
            %td
              = record[0]
            %td
              = record[1]
            %td
              = record[2]
